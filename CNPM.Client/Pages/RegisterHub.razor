@page "/register-hub"
@using System.Net.Http.Json
@using System.Net.Http.Headers
@using Blazored.LocalStorage
@inject HttpClient Http
@inject ILocalStorageService LocalStorage
@inject NavigationManager Nav
@inject IJSRuntime JS

<div class="container-custom">
    <div class="card-register">
        <h2 class="title">Đăng Ký Điểm Nhận Hàng</h2>
        <p class="subtitle">Mở rộng mạng lưới giao nhận cùng CNPM Express</p>

        <EditForm Model="@hubModel" OnValidSubmit="HandleRegisterHub">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label>Tên điểm giao dịch (Hub Name)</label>
                <InputText class="form-control" @bind-Value="hubModel.Name" placeholder="Ví dụ: Bưu cục Cầu Giấy" required />
            </div>

            <div class="form-group">
                <label>Địa chỉ chi tiết</label>
                <InputText class="form-control" @bind-Value="hubModel.Address" placeholder="Số nhà, đường, quận/huyện..." required />
            </div>

            <div class="row">
                <div class="col-half">
                    <label>Giờ mở cửa</label>
                    <InputText type="time" class="form-control" @bind-Value="hubModel.OpeningHours" required />
                </div>
                <div class="col-half">
                    <label>Giờ đóng cửa</label>
                    <InputText type="time" class="form-control" @bind-Value="hubModel.ClosingHours" required />
                </div>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert-error">@errorMessage</div>
            }

            <button type="submit" class="btn-submit" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Đang xử lý...</span>
                }
                else
                {
                    <span>Gửi Đơn Đăng Ký</span>
                }
            </button>
        </EditForm>
    </div>
</div>

<style>
    /* CSS cho form đẹp trai */
    .container-custom {
        display: flex;
        justify-content: center;
        padding-top: 50px;
        background-color: #f5f7fa;
