@code {
    // 1. Tạo Class Model trùng khớp với CreateHubRequest ở Backend
    public class CreateHubRequest
    {
        public string Name { get; set; } = "";
        public string Address { get; set; } = "";
        public string OpeningHours { get; set; } = "08:00";
        public string ClosingHours { get; set; } = "17:00";
    }

    private CreateHubRequest hubModel = new CreateHubRequest();
    private string errorMessage = "";
    private bool isLoading = false;

    private async Task HandleRegisterHub()
    {
        isLoading = true;
        errorMessage = "";

        try
        {
            // Bước 1: Lấy Token từ LocalStorage
            var token = await LocalStorage.GetItemAsync<string>("authToken");
            if (string.IsNullOrEmpty(token))
            {
                errorMessage = "Bạn chưa đăng nhập hoặc phiên làm việc hết hạn.";
                isLoading = false;
                return;
            }

            // Bước 2: Gắn Token vào Header (Quan trọng vì backend có [Authorize])
            Http.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", token);

            // Bước 3: Gọi API (Lưu ý: Thay đổi đường dẫn API cho đúng với Controller của bạn)
            // Giả sử Controller của bạn là HubsController => api/hubs/register-hub
            var response = await Http.PostAsJsonAsync("api/hubs/register-hub", hubModel);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Đăng ký thành công! Vui lòng chờ phê duyệt.");
                Nav.NavigateTo("/"); // Về trang chủ
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"Lỗi: {errorContent}"; // Hiển thị lỗi từ backend trả về (ví dụ: User không tồn tại)
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Có lỗi xảy ra khi kết nối tới server.";
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }
}