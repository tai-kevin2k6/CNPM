@code {
    public class UserSummaryDto
    {
        public int Id { get; set; }
        public string FullName { get; set; }
        public string PhoneNumber { get; set; }
        public string Status { get; set; }
        public string Role { get; set; }
    }

    public class ApproveUserRequest
    {
        public int UserId { get; set; }
        public bool IsLocked { get; set; }
        public string Reason { get; set; }
    }

    private List<UserSummaryDto> allUsers = new();
    private List<UserSummaryDto> filteredUsers = new();
    private bool isLoading = true;
    private string searchTerm = "";
    private string selectedRole = "";

    private int currentPage = 1;
    private int itemsPerPage = 50;
    private int totalPages = 1;

    private List<UserSummaryDto> PagedList => filteredUsers
        .Skip((currentPage - 1) * itemsPerPage)
        .Take(itemsPerPage)
        .ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadDataWithRetry();
    }

    private async Task LoadDataWithRetry()
    {
        isLoading = true;
        int retryCount = 0;
        while (retryCount <= 2)
        {
            try
            {
                var token = await LocalStorage.GetItemAsync<string>("authToken");
                if (!string.IsNullOrEmpty(token))
                    Http.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", token);

                allUsers = await Http.GetFromJsonAsync<List<UserSummaryDto>>("api/Admin/all-users") ?? new();
                FilterData(); // Lọc lần đầu
                isLoading = false; return;
            }
            catch (HttpRequestException ex)
            {
                if (ex.StatusCode == System.Net.HttpStatusCode.Unauthorized) { retryCount++; await Task.Delay(500); }
                else break;
            }
            catch { break; }
        }
        isLoading = false;
    }

    // Khi gõ tìm kiếm -> Reset về trang 1 và lọc lại
    private void HandleSearch()
    {
        currentPage = 1;
        FilterData();
    }

    // Khi đổi Role -> Reset về trang 1 và lọc lại
    private void OnRoleChanged(ChangeEventArgs e)
    {
        selectedRole = e.Value?.ToString() ?? "";
        currentPage = 1;
        FilterData();
    }

    // --- LOGIC LỌC KẾT HỢP ĐÃ SỬA ---
    private void FilterData()
    {
        // Chuẩn hóa từ khóa tìm kiếm về chữ thường để so sánh không phân biệt hoa thường
        var term = searchTerm.ToLower();

        filteredUsers = allUsers.Where(u =>
        {
            // 1. Logic Tìm kiếm (Kết hợp OR): ID chứa từ khóa HOẶC Tên chứa từ khóa HOẶC SĐT chứa từ khóa
            bool matchesSearch = string.IsNullOrEmpty(searchTerm) ||
                                 u.Id.ToString() == (term) ||
                                 //(u.FullName != null && u.FullName.ToLower().Contains(term)) ||
                                 (u.PhoneNumber != null && u.PhoneNumber == term);

            // 2. Logic Lọc Role (Kết hợp AND với logic trên):
            // Nếu không chọn role (selectedRole rỗng) thì lấy hết.
            // Nếu có chọn thì Role phải khớp (So sánh không phân biệt hoa thường)
            bool matchesRole = string.IsNullOrEmpty(selectedRole) ||
                               (u.Role != null && u.Role.Equals(selectedRole, StringComparison.OrdinalIgnoreCase));

            // Chỉ lấy user thỏa mãn CẢ 2 điều kiện
            return matchesSearch && matchesRole;
        }).ToList();

        // Tính lại số trang
        totalPages = (int)Math.Ceiling((double)filteredUsers.Count / itemsPerPage);
        if (totalPages < 1) totalPages = 1;

        // Nếu đang ở trang xa mà lọc xong dữ liệu ít đi, phải reset về trang 1 để không bị lỗi hiển thị
        if (currentPage > totalPages) currentPage = 1;
    }

    private void ChangePage(int newPage) { if (newPage >= 1 && newPage <= totalPages) currentPage = newPage; }
    private bool IsActive(string status) => !string.IsNullOrEmpty(status) && status.ToLower() == "active";
    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "U";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        return parts.Length == 1 ? parts[0][0].ToString() : $"{parts[0][0]}{parts[^1][0]}";
    }

    private async Task ToggleUserStatus(UserSummaryDto user)
    {
        bool currentActive = IsActive(user.Status);
        bool willLock = currentActive;

        string actionName = willLock ? "KHÓA" : "MỞ KHÓA";
        string confirmMsg = $"Bạn có chắc muốn {actionName} tài khoản: {user.FullName}?";

        if (!await JS.InvokeAsync<bool>("confirm", confirmMsg)) return;

        var request = new ApproveUserRequest
        {
            UserId = user.Id,
            IsLocked = willLock,
            Reason = willLock ? "Admin changed status" : ""
        };

        try
        {
            var response = await Http.PostAsJsonAsync("api/Admin/users/lock", request);
            if (response.IsSuccessStatusCode)
            {
                user.Status = willLock ? "locked" : "active";
                StateHasChanged();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "Lỗi cập nhật!");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Lỗi: {ex.Message}");
        }
    }
}