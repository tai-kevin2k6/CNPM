@page "/duyet-diem"
@using System.Net.Http.Json
@using System.Net.Http.Headers
@using Blazored.LocalStorage
@using CNPM.Client.Models
@inject HttpClient Http
@inject ILocalStorageService LocalStorage
@inject IJSRuntime JS

<div class="dashboard-container">
    <div class="page-header">
        <h2 class="page-title">Duyệt Điểm Đăng Ký Mới</h2>
        <p class="page-subtitle">Danh sách các điểm đang chờ quản trị viên phê duyệt hoạt động.</p>
    </div>

    <div class="content-card">
        <div class="table-responsive">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th class="text-center" style="width: 80px;">ID</th>
                        <th>Tên điểm</th>
                        <th>Địa chỉ</th>
                        <th class="text-end" style="width: 220px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (pendingHubs == null)
                    {
                        <tr>
                            <td colspan="4" class="loading-state">
                                <div class="spinner"></div> Đang tải dữ liệu...
                            </td>
                        </tr>
                    }
                    else if (pendingHubs.Count == 0)
                    {
                        <tr>
                            <td colspan="4" class="empty-state">
                                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#cbd5e1" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12h-4l-3 9L9 3l-3 9H2" /></svg>
                                <p>Hiện không có yêu cầu nào đang chờ duyệt.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var hub in pendingHubs)
                        {
                            <tr>
                                <td class="text-center fw-bold text-primary">#@hub.Id</td>
                                <td>
                                    <div class="hub-name" @onclick="() => ViewHubDetail(hub.Id)"
                                         style="cursor: pointer; color: #2563eb; text-decoration: underline;">
                                        @hub.Name
                                    </div>
                                </td>
                                <td class="text-muted">@hub.Address</td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn-action btn-approve" @onclick="() => OpenModal(hub, true)" title="Chấp thuận">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                                            <span>Duyệt</span>
                                        </button>
                                        <button class="btn-action btn-reject" @onclick="() => OpenModal(hub, false)" title="Từ chối">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                                            <span>Từ chối</span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (showModal)
{
    <div class="modal-backdrop">
        <div class="modal-content">
            <div class="modal-header">
                <h3>@(isApproveAction ? "Xác nhận DUYỆT" : "Xác nhận TỪ CHỐI")</h3>
                <button class="btn-close" @onclick="CloseModal">✖</button>
            </div>
            <div class="modal-body">
                <p>Bạn đang thao tác với điểm: <strong>@selectedHub?.Name</strong></p>

                <div class="form-group">
                    <label>
                        Lý do / Ghi chú:
                        @if (!isApproveAction)
                        {
                            <span class="text-danger fw-bold">(*) Bắt buộc</span>
                        }
                    </label>
                    <textarea class="form-control"
                              @bind="reasonInput"
                              rows="3"
                              placeholder="@(isApproveAction ? "Nhập ghi chú (nếu có)..." : "Vui lòng nhập lý do từ chối...")"></textarea>
                </div>

                @if (!isApproveAction)
                {
                    <div class="alert alert-warning mt-3">
                        ⚠️ <strong>Lưu ý:</strong> Điểm này sẽ bị từ chối và không thể hoạt động trên hệ thống.
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseModal">Hủy bỏ</button>
                <button class="btn @(isApproveAction ? "btn-success" : "btn-danger")" @onclick="SubmitDecision">
                    @(isApproveAction ? "Xác nhận Duyệt" : "Xác nhận Từ chối")
                </button>
            </div>
        </div>
    </div>
}

@if (showDetailModal)
{
    <div class="modal-backdrop">
        <div class="modal-content" style="width: 700px;">
            <div class="modal-header">
                <h3>Chi tiết Điểm Đăng Ký</h3>
                <button class="btn-close" @onclick="CloseDetailModal">✖</button>
            </div>

            <div class="modal-body">
                @if (detailedHub == null)
                {
                    <div class="text-center p-4">
                        <div class="spinner"></div> Đang tải thông tin...
                    </div>
                }
                else
                {
                    <div style="display: flex; gap: 20px;">
                        <div style="flex: 1;">
                            <h5 style="color: #1e3a8a; border-bottom: 2px solid #e2e8f0; padding-bottom: 5px;">📍 Thông tin Điểm</h5>
                            <p><strong>Tên:</strong> @detailedHub.Name</p>
                            <p><strong>Địa chỉ:</strong> @detailedHub.Address</p>
                            <p><strong>Giờ hoạt động:</strong> @detailedHub.OpeningHours - @detailedHub.ClosingHours</p>
                        </div>

                        <div style="flex: 1; padding-left: 20px; border-left: 1px solid #e2e8f0;">
                            <h5 style="color: #1e3a8a; border-bottom: 2px solid #e2e8f0; padding-bottom: 5px;">👤 Thông tin Chủ sở hữu</h5>
                            <p><strong>Họ tên:</strong> @detailedHub.OwnerName</p>
                            <p><strong>SĐT:</strong> @(string.IsNullOrEmpty(detailedHub.PhoneNumber) ? "Chưa cập nhật" : detailedHub.PhoneNumber)</p>
                        </div>
                    </div>
                }
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseDetailModal">Đóng</button>
            </div>
        </div>
    </div>
}

