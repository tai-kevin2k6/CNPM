@code {
    private List<HubSummaryDto> pendingHubs = new List<HubSummaryDto>();
    private bool showModal = false;
    private HubSummaryDto selectedHub;
    private bool isApproveAction = true;
    private string reasonInput = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadPendingHubs();
    }

    private async Task LoadPendingHubs()
    {
        try
        {
            var token = await LocalStorage.GetItemAsync<string>("authToken");
            if (string.IsNullOrEmpty(token)) return;
            Http.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", token);

            var result = await Http.GetFromJsonAsync<List<HubSummaryDto>>("api/Admin/hub-pending");
            if (result != null)
            {
                pendingHubs = result;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("Lỗi tải danh sách: " + ex.Message);
        }
    }

    private void OpenModal(HubSummaryDto hub, bool isApprove)
    {
        selectedHub = hub;
        isApproveAction = isApprove;
        reasonInput = "";
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task SubmitDecision()
    {
        // Kiểm tra đầu vào: Nếu là TỪ CHỐI và Lý do để trống -> Báo lỗi
        if (!isApproveAction && string.IsNullOrWhiteSpace(reasonInput))
        {
            await JS.InvokeVoidAsync("alert", "Vui lòng nhập lý do từ chối!");
            return; // Dừng lại, không gửi API
        }

        try
        {
            var token = await LocalStorage.GetItemAsync<string>("authToken");
            Http.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", token);

            var request = new ApproveHubRequest
            {
                HubId = selectedHub.Id,
                IsLocked = !isApproveAction,
                Reason = reasonInput
            };

            // Gửi API...
            var response = await Http.PostAsJsonAsync("api/Admin/approve-pending", request);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", isApproveAction ? "Đã duyệt thành công!" : "Đã từ chối yêu cầu!");
                CloseModal();
                await LoadPendingHubs();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", "Lỗi: " + error);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("Lỗi: " + ex.Message);
            await JS.InvokeVoidAsync("alert", "Có lỗi xảy ra.");
        }
    }

    private bool showDetailModal = false;
    private HubDetailDto detailedHub; // Class DTO trả về từ API

    // Hàm mở Modal xem chi tiết
    private async Task ViewHubDetail(int id)
    {
        showDetailModal = true;
        detailedHub = null; // Reset về null để hiện loading
        try
        {
            var token = await LocalStorage.GetItemAsync<string>("authToken");
            Http.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", token);

            // Gọi API Backend vừa tạo ở Bước 1
            detailedHub = await Http.GetFromJsonAsync<HubDetailDto>($"api/Admin/get-detail-hub/{id}");
        }
        catch (Exception ex)
        {
            Console.WriteLine("Lỗi tải chi tiết: " + ex.Message);
            await JS.InvokeVoidAsync("alert", "Không thể tải chi tiết điểm này.");
            showDetailModal = false;
        }
    }

    private void CloseDetailModal()
    {
        showDetailModal = false;
    }
}
